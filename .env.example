# Database Configuration
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
AUTH_DB=auth_db
PRODUCT_DB=products_db
INVENTORY_DB=inventory_db
ORDERS_DB=orders_db
PAYMENT_DB=payment_db
WORKER_DB=worker_db

# Messaging & Search
KAFKA_BOOTSTRAP=localhost:9092
KAFKA_PORT=9092

# Temporal
TEMPORAL_TASK_QUEUE=ORDER_SAGA_QUEUE

# Security (256-bit key required for JWT HMAC-SHA)
JWT_SECRET=your-secret-key-here-must-be-256-bits-minimum

# Service Ports
AUTH_SERVICE_PORT=8081
PRODUCT_SERVICE_PORT=8082
INVENTORY_SERVICE_PORT=8083
ORDER_SERVICE_PORT=8084
PAYMENT_SERVICE_PORT=8085
GATEWAY_PORT=8080
TEMPORAL_WORKER_PORT=8090

# Observability
ZIPKIN_ENDPOINT=http://zipkin:9411/api/v2/spans

# Service URLs (used by gateway/worker)
AUTH_SERVICE_URL=http://localhost:8081
PRODUCT_SERVICE_URL=http://localhost:8084
INVENTORY_SERVICE_URL=http://localhost:8082
ORDER_SERVICE_URL=http://localhost:8084
PAYMENT_SERVICE_URL=http://localhost:8083

# Nginx Basic Auth
NGINX_BASIC_AUTH_USER=admin
NGINX_BASIC_AUTH_PASSWORD=admin

# Kafka Topic Names (optional - defaults provided in application.yml)
# KAFKA_TOPIC_PRODUCT_CREATED=product.created
# KAFKA_TOPIC_PRODUCT_UPDATED=product.updated
# KAFKA_TOPIC_ORDER_CREATED=orders.created
# KAFKA_TOPIC_ORDER_CONFIRMED=orders.confirmed
# KAFKA_TOPIC_ORDER_FAILED=orders.failed
# KAFKA_TOPIC_INVENTORY_UPDATED=inventory.updated