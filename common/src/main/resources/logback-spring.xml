<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define IST timezone -->
    <conversionRule conversionWord="istTime" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    
    <!-- Console appender with custom format -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Format: 16-Dec 10:52 PM  INFO  o.s.k.l.KafkaMessageListenerContainer : message -->
            <pattern>%d{dd-MMM hh:mm a, Asia/Kolkata}  %-5level %logger{36} : %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Reduce noise from Spring framework -->
    <logger name="org.springframework.boot" level="INFO" />
    <logger name="org.springframework.web" level="INFO" />
    <logger name="org.hibernate" level="WARN" />
    <logger name="org.apache.kafka" level="WARN" />
    <logger name="io.lettuce" level="WARN" />
    <logger name="io.netty" level="WARN" />
    
    <!-- Application loggers at DEBUG for development -->
    <logger name="com.abhishek.limitedcart" level="INFO" />
</configuration>
